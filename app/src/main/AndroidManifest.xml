<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.conorwhyte.smartalarmclock">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-feature android:name="android.hardware.location.gps" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".AlarmReceiver" />

        <activity android:name=".StopAlarmActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".CardListActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".DistanceActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".MapDirections"
            android:theme="@style/AppTheme"/>

        <meta-data
            android:name="com.google.android.maps.v4.API_KEY"
            android:value="AIzaSyBNEagd68QNkTC3hwX_bCvD0b_NhAF_3xk" />

        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps"
            android:theme="@style/AppTheme"/>
        <activity android:name=".AlarmActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".AddUserDetailsActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".ViewDetailsActivity"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>